{% extends 'base.html.twig' %}

    {%  block body %}

        <section class="page-add">
            <div class="container">
                <div class="row">
                    <div class="page-breadcrumb">
                        <h2>Particular Account</h2>
                    </div>
                </div>
            </div>
        </section>

        <div class="contact-section">
            <div class="container">
               <div class="row">
                    <div class="col-lg-12">
                        <form action="{{ path('connexion') }}" method="post">
                            <div class="form-group">
                                <label class="form-label" for="email">Your email</label>
                                <input placeholder="john.snow@example.com" required name="_username" type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="password">Your password</label>
                                <input placeholder="********" required name="_password" type="password" class="form-control">
                            </div>
                            <div class="col-lg-12 text-right">
                                <button type="submit" class="btn btn-outline-dark">Connexion</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>



{% endblock %}