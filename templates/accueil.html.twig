{% extends 'base.html.twig' %}

{% block body %}

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">


                <img class="d-block w-100" src="../img/Vetements.jpg" alt="First slide">

                <div class="carousel-caption">
                    <div class="col-lg-12 text-center">
                        <form action="{{ path('categorie')}}">
                            <button type="submit" class="btn btn-outline-dark">See More</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="carousel-item">

                <img class="d-block w-100" src="../img/Meubles.jpg" alt="Second slide">

                <div class="carousel-caption">
                    <div class="col-md-6 text-left">
                        <form action="{{ path('categorie')}}">
                            <button type="submit" class="btn btn-outline-dark">See More</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="../img/livres.jpg" alt="Third slide">

                <div class="carousel-caption">
                    <div class="col-md-6 text-center">
                        <form action="{{ path('categorie')}}">
                            <button type="submit" class="btn btn-outline-dark">See More</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
<footer class="footer-section font-small pt-4">
    <div class="container">
        <div class="newslatter-form">
            <div class="row">
                <div class="col-lg-12">
                    {{ form(form_news) }}
                    <!-- <form action="#">
                         <input type="text" placeholder="Your email address">
                         <button type="submit">Subscribe to our newsletter</button>
                     </form>-->
                </div>
            </div>
        </div>
    </div>


{% endblock %}
